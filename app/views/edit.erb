<h1>Edit Your Recipe:</h1>

<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <label for="name">Name:</label>
    <input id="name" type="text" name="name" value="<%= @recipe.name %>" /></br>
    <label for="ingredients">Ingredients:</label>
    <input id="ingredients" type="text" name="ingredients" value="<%= @recipe.ingredients %>"/></br>
    <label for="cook_time">Cook Time:</label>
    <input id="cook_time" type="text" name="cook_time" value="<%= @recipe.cook_time %>"/>
    <button id="submit" type="submit">Update Article</button>
</form>