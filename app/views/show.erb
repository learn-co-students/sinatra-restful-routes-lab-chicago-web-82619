<h1><%= @recipe.name %></h1>
<h2>Ingredients</h2>
<p><%= @recipe.ingredients %></p>
<h2>Cook Time</h2>
<p><%= @recipe.cook_time %></p>
<form method="post" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" id="delete" name="Delete" value="delete">
</form>